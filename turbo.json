{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["BRAZE_*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format:check": {
      "dependsOn": ["^format:check"]
    },
    "fix:all": {
      "dependsOn": ["^fix:all"]
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
